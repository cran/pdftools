COMPILED_BY ?= gcc-4.6.3
PKG_CXXFLAGS=-Dpoppler_cpp_EXPORTS
PKG_CPPFLAGS=-I../windows/poppler-0.46.0/include/poppler/cpp

PKG_LIBS= \
	-L../windows/poppler-0.46.0/lib${subst gcc,,${COMPILED_BY}}${R_ARCH} \
	-L../windows/poppler-0.46.0/lib${R_ARCH} \
	-lpoppler-cpp -lpoppler -liconv

all: clean winlibs

clean:
	rm -f $(OBJECTS) $(SHLIB)

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" "../tools/winlibs.R"

.PHONY: all winlibs clean
