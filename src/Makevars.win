COMPILED_BY ?= gcc-4.6.3
PKG_CXXFLAGS=-Dpoppler_cpp_EXPORTS
PKG_CPPFLAGS=-I../windows/poppler-0.42.0/include/poppler/cpp

PKG_LIBS=-L../windows/poppler-0.42.0/lib${subst gcc,,${COMPILED_BY}}${R_ARCH} \
	-lpoppler-cpp -lpoppler -lgdi32 -liconv

all: clean winlibs

clean:
	rm -f $(OBJECTS) pdftools.dll

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" "../tools/winlibs.R"
